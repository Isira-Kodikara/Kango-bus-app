# KANGO Backend Environment Variables
# Copy this file to .env and fill in your values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# MySQL Database Connection
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=kango_bus
MYSQL_USER=root
MYSQL_PASSWORD=

# Railway automatically provides these as:
# MYSQLHOST, MYSQLPORT, MYSQLDATABASE, MYSQLUSER, MYSQLPASSWORD

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET=your-super-secure-random-secret-key-change-in-production

# =====================================================
# APPLICATION SETTINGS
# =====================================================

# Set to true in production
PRODUCTION=false

# CORS Allowed Origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# For production:
# CORS_ORIGINS=https://your-frontend-domain.vercel.app
