# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Database Configuration (Option 1: Individual Variables)
DB_HOST=localhost
DB_NAME=kango_bus
DB_USER=root
DB_PASS=
DB_PORT=3306

# Database Configuration (Option 2: Connection URL - Recommended for Railway Public Link)
# DATABASE_URL=mysql://root:password@host:port/database_name

# Railway Database (Production)
# These are automatically set by Railway
# MYSQLHOST=
# MYSQLDATABASE=
# MYSQLUSER=
# MYSQLPASSWORD=
# MYSQLPORT=

# JWT Configuration
# IMPORTANT: Generate a strong secret key for production
# You can use: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_key_here_change_this_in_production

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Email Configuration (for OTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@kango.com
MAIL_FROM_NAME=KANGO Bus Navigation

# Environment
PRODUCTION=false
RAILWAY_ENVIRONMENT=

# API Configuration
API_VERSION=1.0
RAILWAY_PUBLIC_DOMAIN=

# Security
# Set to false in production
DEBUG_MODE=true
DISPLAY_ERRORS=false
